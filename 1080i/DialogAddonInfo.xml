<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">300</defaultcontrol>
    <coordinates>
        <origin x="0" y="0"/>
    </coordinates>
    <controls>
        <include>FullBackground</include>
        <include>MediaHeader</include>
        <control type="group" description="Content">
            <include>OpenClose</include>
            <control type="group">
                <control type="group" description="Thumbs">
                    <posx>0</posx>
                    <posy>6</posy>
                    <control type="image" description="Icon">
                        <posx>1350</posx>
                        <posy>270</posy>
                        <width>495</width>
                        <height>495</height>
                        <aspectratio align="right" aligny="top">keep</aspectratio>
                        <texture fallback="DefaultFolder.png">$INFO[ListItem.Thumb]</texture>
                    </control>
                </control>
                <control type="group" description="top">
                    <posx>90</posx>
                    <posy>270</posy>
                    <control type="label" description="Item Label">
                        <posy>0</posy>
                        <width>1125</width>
                        <height>60</height>
                        <include>TitleCommons</include>
                        <align>left</align>
                        <autoscroll time="6000" delay="8000" repeat="8000">true</autoscroll>
                        <info>ListItem.Property(Addon.Name)</info>
                    </control>
                    <control type="label" description="summary">
                        <posy>75</posy>
                        <width>1125</width>
                        <height>45</height>
                        <font>size22</font>
                        <align>left</align>
                        <label>$INFO[ListItem.Property(Addon.Summary)]</label>
                    </control>
                    <control type="label" description="Author">
                        <posy>150</posy>
                        <width>1125</width>
                        <height>45</height>
                        <font>size22</font>
                        <align>left</align>
                        <textcolor>Silver</textcolor>
                        <label>$INFO[ListItem.Property(Addon.Creator)]</label>
                    </control>
                    <control type="label" description="Version">
                        <posy>195</posy>
                        <width>1125</width>
                        <height>45</height>
                        <font>size22</font>
                        <align>left</align>
                        <textcolor>Silver</textcolor>
                        <label>$INFO[ListItem.Property(Addon.Version),$LOCALIZE[24051] ]</label>
                    </control>
                    <control type="label" description="Disclaimer">
                        <posy>270</posy>
                        <width>1125</width>
                        <height>45</height>
                        <font>size18</font>
                        <align>left</align>
                        <textcolor>HL</textcolor>
                        <label>$INFO[ListItem.Property(Addon.Disclaimer)]</label>
                    </control>
                    <control type="textbox" description="Plot">
                        <posx>0</posx>
                        <posy>330</posy>
                        <width>1200</width>
                        <height>336</height>
                        <align>justify</align>
                        <autoscroll delay="6500" time="4000" repeat="10000">Skin.HasSetting(AutoScroll)</autoscroll>
                        <label>$INFO[ListItem.Property(Addon.Description)]</label>
                    </control>
                </control>
            </control>
            <control type="image" description="Navbar">
                <posx>-90</posx>
                <posy>963</posy>
                <width>2100</width>
                <height>136</height>
                <aspectratio>stretch</aspectratio>
                <texture>img/HomeMenuBar.png</texture>
            </control>
            <control type="grouplist" id="300">
                <posx>0</posx>
                <posy>993</posy>
                <width>1920</width>
                <height>88</height>
                <itemgap>0</itemgap>
                <aligny>bottom</aligny>
                <align>center</align>
                <orientation>horizontal</orientation>
                <control type="button" id="6" description="Install">
                    <height>66</height>
                    <width>270</width>
                    <align>center</align>
                    <font>size22</font>
                    <label>24038</label>
                </control>
                <control type="button" id="7" description="Disable">
                    <height>66</height>
                    <width>270</width>
                    <align>center</align>
                    <font>size22</font>
                    <label>24021</label>
                </control>
                <control type="button" id="8" description="update">
                    <height>66</height>
                    <width>270</width>
                    <align>center</align>
                    <font>size22</font>
                    <label>24069</label>
                </control>
                <control type="button" id="9" description="settings">
                    <height>66</height>
                    <width>270</width>
                    <align>center</align>
                    <font>size22</font>
                    <label>5</label>
                </control>
                <control type="button" id="10" description="changelog">
                    <height>66</height>
                    <width>270</width>
                    <align>center</align>
                    <font>size22</font>
                    <label>24054</label>
                </control>
                <control type="button" id="11" description="rollback">
                    <height>66</height>
                    <width>270</width>
                    <align>center</align>
                    <font>size22</font>
                    <label>$LOCALIZE[24048]</label>
                </control>
            </control>
        </control>
    </controls>
</window>