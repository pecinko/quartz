<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">300</defaultcontrol>
  <include>OpenClose</include>
  <coordinates>
    <origin x="0" y="0"/>
  </coordinates>
  <controls>
    <include>MiniBackground</include>
    <include>AddonsBackground</include>
    <control type="image" description="Vignette">
      <include>Dimensions_Fullscreen</include>
      <texture>img/Vignette_VideoInfo.png</texture>
      <aspectratio>stretch</aspectratio>
    </control>
    <include>Header</include>
    <control type="group">
      <control type="group" description="Thumbs">
        <posx>0</posx>
        <posy>6</posy>
        <control type="image" description="Icon">
          <posx>1350</posx>
          <posy>270</posy>
          <width>495</width>
          <height>495</height>
          <aspectratio align="right" aligny="top">keep</aspectratio>
          <bordertexture border="4">img/CoverOverlay0.png</bordertexture>
          <bordersize>2</bordersize>
          <texture fallback="DefaultAddon.png">$INFO[ListItem.Thumb]</texture>
        </control>
      </control>
      <control type="group" description="top">
        <posx>90</posx>
        <posy>270</posy>
        <control type="label" description="Item Label">
          <posy>0</posy>
          <width>1125</width>
          <height>60</height>
          <include>TitleCommons</include>
          <align>left</align>
          <autoscroll time="6000" delay="8000" repeat="8000">true</autoscroll>
          <info>ListItem.Property(Addon.Name)</info>
        </control>
        <control type="label" description="summary">
          <posy>75</posy>
          <width>1125</width>
          <height>45</height>
          <font>size22</font>
          <align>left</align>
          <label>$INFO[ListItem.Property(Addon.Summary)]</label>
        </control>
        <control type="label" description="Author">
          <posy>150</posy>
          <width>1125</width>
          <height>45</height>
          <font>size22</font>
          <align>left</align>
          <textcolor>Silver</textcolor>
          <label>$INFO[ListItem.Property(Addon.Creator)]</label>
        </control>
        <control type="label" description="Version">
          <posy>195</posy>
          <width>1125</width>
          <height>45</height>
          <font>size22</font>
          <align>left</align>
          <textcolor>Silver</textcolor>
          <label>$INFO[ListItem.Property(Addon.Version),$LOCALIZE[24051] ]</label>
        </control>
        <control type="label" description="Disclaimer">
          <posy>270</posy>
          <width>1125</width>
          <height>45</height>
          <font>size18</font>
          <align>left</align>
          <textcolor>Blue</textcolor>
          <label>$INFO[ListItem.Property(Addon.Disclaimer)]</label>
        </control>
        <control type="textbox" description="Plot">
          <posx>0</posx>
          <posy>330</posy>
          <width>1200</width>
          <height>336</height>
          <align>justify</align>
          <autoscroll delay="6500" time="4000" repeat="10000">Skin.HasSetting(AutoScroll)</autoscroll>
          <label>$INFO[ListItem.Property(Addon.Description)]</label>
        </control>
      </control>
    </control>
    <control type="image">
      <posx>0</posx>
      <posy>1023</posy>
      <height>60</height>
      <width>1920</width>
      <aspectratio>stretch</aspectratio>
      <texture>img/BlackDotT.png</texture>
    </control>
    <control type="image" description="Navbar">
      <posx>-82</posx>
      <posy>1023</posy>
      <width>2085</width>
      <height>1</height>
      <aspectratio>stretch</aspectratio>
      <texture>img/Line1.png</texture>
    </control>
    <control type="group" description="Options">
      <posy>0</posy>
      <posx>0</posx>
      <control type="grouplist" id="300">
        <posx>15</posx>
        <posy>1021</posy>
        <width>1890</width>
        <height>60</height>
        <itemgap>0</itemgap>
        <aligny>bottom</aligny>
        <align>center</align>
        <onup>noop</onup>
        <orientation>horizontal</orientation>
        <control type="button" id="6" description="Install">
          <height>60</height>
          <width>270</width>
          <label>24038</label>
          <font>size18</font>
          <texturefocus>img/HomeBarFO.png</texturefocus>
        </control>
        <control type="button" id="7" description="Disable">
          <height>60</height>
          <width>270</width>
          <label>24021</label>
          <font>size18</font>
          <texturefocus>img/HomeBarFO.png</texturefocus>
        </control>
        <control type="button" id="8" description="update">
          <height>60</height>
          <width>270</width>
          <label>24069</label>
          <font>size18</font>
          <texturefocus>img/HomeBarFO.png</texturefocus>
        </control>
        <control type="button" id="9" description="settings">
          <height>60</height>
          <width>270</width>
          <label>5</label>
          <font>size18</font>
          <texturefocus>img/HomeBarFO.png</texturefocus>
        </control>
        <control type="button" id="10" description="changelog">
          <height>60</height>
          <width>270</width>
          <label>24054</label>
          <font>size18</font>
          <texturefocus>img/HomeBarFO.png</texturefocus>
        </control>
        <control type="button" id="11" description="rollback">
          <height>60</height>
          <width>270</width>
          <label>$LOCALIZE[24048]</label>
          <font>size18</font>
          <texturefocus>img/HomeBarFO.png</texturefocus>
        </control>
      </control>
    </control>
  </controls>
</window>