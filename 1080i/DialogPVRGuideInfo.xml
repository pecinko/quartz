          <height>75</height>
          <width>270</width>
          <align>center</align>
          <font>size20</font>
          <label>19165</label>
          <altlabel>1024</altlabel>
          <textcolor>White</textcolor>
          <texturefocus>img/HomeBarFO.png</texturefocus>
        </control>
        <control type="button" id="6" description="Record">
          <height>75</height>
          <width>270</width>
          <align>center</align>
          <font>size20</font>
          <textcolor>White</textcolor>
          <label>-</label>
          <texturefocus>img/HomeBarFO.png</texturefocus>
        </control>
        <control type="button" id="7" description="Close">
          <onup>50</onup>
          <height>75</height>
          <width>270</width>
          <align>center</align>
          <font>size20</font>
          <textcolor>White</textcolor>
          <label>186</label>
          <texturefocus>img/HomeBarFO.png</texturefocus>
        </control>
      </control>
    </control>
    <control type="group" description="Header group">
      <control type="image" description="Header">
        <posx>0</posx>
        <posy>0</posy>
        <width>1920</width>
        <height>72</height>
        <texture>img/BlackDotST.png</texture>
        <aspectratio>stretch</aspectratio>
      </control>
      <control type="image" description="Line Split">
        <posx>0</posx>
        <posy>70</posy>
        <width>1920</width>
        <height>1</height>
        <texture>img/LineST.png</texture>
        <aspectratio>stretch</aspectratio>
