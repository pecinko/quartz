            <posx>15</posx>
            <posy>960</posy>
            <control type="image" description="Playing BG">
                <width>390</width>
                <height>105</height>
                <texture border="14">img/ProgressBG.png</texture>
            </control>
            <control type="group">
                <control type="image">
                    <posx>15</posx>
                    <posy>15</posy>
                    <width>75</width>
                    <height>75</height>
                    <texture>$INFO[MusicPlayer.Cover]</texture>
                    <aspectratio>keep</aspectratio>
                </control>
