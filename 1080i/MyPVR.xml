      <control type="grouplist" id="9000">
        <posx>675</posx>
        <posy>279</posy>
        <width>576</width>
        <height>525</height>
        <itemgap>0</itemgap>
        <onleft>50</onleft>
        <onright>50</onright>
        <onup>9000</onup>
        <ondown>9000</ondown>
        <scrolltime>200</scrolltime>
        <orientation>vertical</orientation>
        <control type="button" id="32" description="TV Channels">
          <include>9000Buttons</include>
          <label>19023</label>
        </control>
        <control type="button" id="33" description="Radio Channels">
          <onleft>12</onleft>
          <onright>12</onright>
          <label>19024</label>
          <include>9000Buttons</include>
        </control>
        <control type="button" id="31" description="TV Guide">
          <include>9000Buttons</include>
          <label>$LOCALIZE[19222]: $LOCALIZE[19030]</label>
        </control>
        <control type="button" id="34" description="Recordings">
          <include>9000Buttons</include>
          <label>19163</label>
